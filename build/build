cd ~/httpdocs/b
git pull origin gh-pages
if [ "$1" == "deploy" ] 
	then
	echo "hardcore compression"
	lessc --yui-compress css/_main.less > css/main.css
else
	lessc css/_main.less > css/main.css
fi

jekyll build --trace

if [ "$1" == "deploy" ] 
	then
	echo "Deploying to S3" 
	s3cmd sync  --recursive  --add-header='Content-Encoding: gzip' --guess-mime-type --delete-removed --acl-public ~/httpdocs/b/_site/ s3://blog.wordspicturesideas.com
fi

exit 23